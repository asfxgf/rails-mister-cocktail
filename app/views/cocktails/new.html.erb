<h1>Create a new cocktail</h1>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_change, as: :hidden %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<hr>
<%= link_to cocktails_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
