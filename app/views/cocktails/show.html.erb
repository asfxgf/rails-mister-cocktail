<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  </li>
  <% end %>
</ul>
<br>
<% if @cocktail.photo.present? %>
<%= cl_image_tag @cocktail.photo.url, height: 300, width: 400, crop: :fill %>
<% end %>

<%= link_to cocktails_path do %>
  <i class="fa fa-plus"></i> GO back to list
  <% end %>
<%= link_to new_cocktail_dose_path(@cocktail) do %>
  <i class="fa fa-plus"></i> Let's add a dose
  <% end %>
